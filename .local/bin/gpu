#!/bin/bash

# GPU management wrapper for EnvyControl

case "$1" in
  intel)
    sudo -A envycontrol -s integrated
    ;;
  nvidia)
    sudo -A envycontrol -s nvidia
    ;;
  hybrid)
    sudo -A envycontrol -s hybrid
    ;;
  "")
    envycontrol --query
    ;;
  *)
    echo "Usage: gpu [intel|nvidia|hybrid]"
    echo "  gpu          - show current GPU status"
    echo "  gpu intel    - switch to Intel GPU"
    echo "  gpu nvidia   - switch to NVIDIA GPU"
    echo "  gpu hybrid   - switch to hybrid mode"
    exit 1
    ;;
esac
