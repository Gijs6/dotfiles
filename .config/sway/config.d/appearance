output * bg ~/.config/sway/fallback-bg.png fill
exec "if [ -f /usr/share/backgrounds/bg-00.jpg ]; then swaymsg 'output * bg /usr/share/backgrounds/bg-00.jpg fill'; fi"

default_border pixel 1

default_orientation auto
workspace_layout default

client.focused          $magenta  $magenta  $bg       $magenta
client.unfocused        $black    $bg       $fg       $black

bar {
  mode invisible
}

exec waybar
